<Window x:Name="MainWindow1" x:Class="EV3_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Button x:Name="GoForward" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" FontSize="30" Click="GoForward_Click"/>
        <Label x:Name="SensorValue" Content="Label" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="40"/>
        <Button x:Name="CalibrateButton" Content="Calibration" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="0,50,0,0" Click="CalibrateButton_Click"/>
        <Label x:Name="CalibrateValueLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,69,0,0" Width="150"/>

    </Grid>
</Window>
